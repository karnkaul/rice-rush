{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 20,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "default",
			"description": "Default build using Ninja",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/default",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "ninja-clang",
			"description": "Base configuration using Ninja / clang",
			"inherits": "${sourceDir}/default",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "ninja-debug",
			"description": "Debug build using Ninja",
			"binaryDir": "${sourceDir}/out/db",
			"inherits": "default",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "ninja-release",
			"description": "Release build using Ninja",
			"binaryDir": "${sourceDir}/out/rl",
			"inherits": "default",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "ninja-relw",
			"description": "RelWithDebInfo build using Ninja/clang",
			"binaryDir": "${sourceDir}/out/rw",
			"inherits": "default",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "vs19",
			"description": "Build configuration using Visual Studio 16 (2019)",
			"generator": "Visual Studio 16 2019",
			"binaryDir": "${sourceDir}/out/vs",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},
		{
			"name": "vs22",
			"description": "Build configuration using Visual Studio 17 (2022)",
			"inherits": "vs19",
			"generator": "Visual Studio 17 2022"
		},
		{
			"name": "ninja-ubsan",
			"description": "UBSan debug build using Ninja",
			"inherits": "ninja-debug",
			"binaryDir": "${sourceDir}/out/ubsan",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "-fsanitize=undefined"
			}
		},
		{
			"name": "pre-install",
			"description": "Debug build using Ninja and install prefix",
			"inherits": "ninja-debug",
			"binaryDir": "${sourceDir}/out/pre",
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_PREFIX_PATH": "out/install",
				"RR_PREINSTALLED": "ON"
			}
		}
	],
	"buildPresets": [
		{
			"name": "Debug",
			"configurePreset": "pre-install",
			"configuration": "Debug"
		},
		{
			"name": "Release",
			"configurePreset": "pre-install",
			"configuration": "Release"
		},
		{
			"name": "RelWithDebInfo",
			"configurePreset": "pre-install",
			"configuration": "RelWithDebInfo"
		}
	],
	"testPresets": [
		{
			"name": "Debug",
			"configurePreset": "pre-install",
			"configuration": "Debug"
		},
		{
			"name": "Release",
			"configurePreset": "pre-install",
			"configuration": "Release"
		},
		{
			"name": "RelWithDebInfo",
			"configurePreset": "pre-install",
			"configuration": "RelWithDebInfo"
		}
	]
}
